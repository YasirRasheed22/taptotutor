<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_color"
    tools:context=".StudentDashboard"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"

        android:src="@drawable/userprofile" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageprofile"
        android:layout_gravity="center"
        android:text="Shahid Afridi"
        android:textSize="30dp"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_gravity="center"
        android:text="shahidafridi@gmail.com"
        android:textSize="20dp"


        />
    <LinearLayout
        android:layout_below="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearlayout1"

        >

        <ImageView
            android:layout_width="39dp"
            android:layout_height="36dp"
            android:layout_marginTop="50dp"
            android:id="@+id/image_myprofile"
            app:srcCompat="@drawable/ic_person_black_24dp"
            android:layout_marginLeft="100dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-30dp"
            android:text="My Profile"
            android:textSize="20sp"
            android:paddingRight="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearlayout2"
        android:layout_marginTop="-30dp"
        >

        <ImageView
            android:layout_width="39dp"
            android:layout_height="36dp"
            android:layout_marginTop="50dp"
            android:id="@+id/image_requestsent"
            app:srcCompat="@drawable/ic_call_request_sent_black_24dp"
            android:layout_marginLeft="100dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-30dp"
            android:text="Sent Request"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/linearlayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearlayout3"
        android:layout_marginTop="-30dp"
        >

        <ImageView
            android:layout_width="39dp"
            android:layout_height="36dp"
            android:layout_marginTop="50dp"
            android:id="@+id/image_notification"
            app:srcCompat="@drawable/ic_notifications_black_24dp"
            android:layout_marginLeft="100dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-30dp"
            android:text="Notifications"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/linearlayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearlayout4"
        android:layout_marginTop="-30dp"
        >

        <ImageView
            android:layout_width="39dp"
            android:layout_height="36dp"
            android:layout_marginTop="50dp"
            android:id="@+id/image_chat"
            app:srcCompat="@drawable/ic_message_black_24dp"
            android:layout_marginLeft="100dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-30dp"
            android:text="Messages"
            android:textSize="20sp"
            android:paddingRight="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/linearlayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearlayout5"
        android:layout_marginTop="-30dp"
        >

        <ImageView
            android:layout_width="39dp"
            android:layout_height="36dp"
            android:layout_marginTop="50dp"
            android:id="@+id/image_search"
            app:srcCompat="@drawable/ic_search_black_24dp"
            android:layout_marginLeft="100dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-30dp"
            android:text="Search"
            android:textSize="20sp"
            android:paddingRight="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/linearlayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearlayout6"
        android:layout_marginTop="50dp"
        >

        <ImageView
            android:layout_width="39dp"
            android:layout_height="36dp"
            android:layout_marginTop="50dp"
            android:id="@+id/image_logout"
            app:srcCompat="@drawable/ic_exit_to_app_black_24dp"
            android:layout_marginLeft="100dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-30dp"
            android:text="Log Out"
            android:textSize="20sp"
            android:paddingRight="30dp"/>

    </LinearLayout>

</LinearLayout>